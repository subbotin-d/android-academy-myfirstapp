<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.animationtask.task2.replace.FirstWithReplaceFragment">

    <TextView
        android:id="@+id/digit_one_text_view_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/digit_one_label"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/fragment_one_image_bn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_one_image_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/digit_one_text_view_bn"
        app:srcCompat="@drawable/ic_active_star_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>