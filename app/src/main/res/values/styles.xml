<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="colorBackButton" format="color" />

    <style name="Theme.MyFirstApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorBackButton">@color/medium_gray</item>
    </style>

    <style name="Header3">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_spacing_huge</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="lineHeight">@dimen/line_height_huge</item>
    </style>

    <style name="Header2">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_spacing_huge</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="lineHeight">@dimen/line_height_huge</item>
    </style>

    <style name="Subtitle2">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_spacing_regular</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="lineHeight">@dimen/line_height_regular</item>
    </style>

    <style name="Body2">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_spacing_regular</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="lineHeight">@dimen/line_height_regular</item>
    </style>

    <style name="tagStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_spacing_regular</item>
        <item name="android:textColor">@color/coral</item>
        <item name="lineHeight">@dimen/line_height_regular</item>
    </style>

    <style name="tagStyle.Small">
        <item name="android:textSize">@dimen/text_spacing_tiny</item>
        <item name="lineHeight">@dimen/line_height_tiny</item>
    </style>

    <style name="reviewTextStyle">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_spacing_regular</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="textAllCaps">true</item>
        <item name="lineHeight">@dimen/line_height_regular</item>
    </style>

    <style name="reviewTextStyle.Small">
        <item name="android:textSize">@dimen/text_spacing_tiny</item>
        <item name="lineHeight">@dimen/line_height_tiny</item>
    </style>

    <style name="pgStyle">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_spacing_pg</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="lineHeight">@dimen/line_height_small</item>
    </style>

    <style name="durationStyle">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_spacing_tiny</item>
        <item name="android:textColor">@color/soft_dark_gray</item>
        <item name="lineHeight">@dimen/line_height_tiny</item>
    </style>

</resources>